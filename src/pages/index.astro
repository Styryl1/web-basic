    color: #2a4b70;
    background: rgba(47, 145, 202, 0.12);
  }

  .ep-header__cta-group {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .ep-btn-shell {
    position: relative;
    width: fit-content;
    border-radius: 9999px;
    transition-duration: 0.2s;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-property: color, background-color, border-color, text-decoration-color, fill, stroke;
  }

  .ep-btn-shell::before,
  .ep-btn-shell::after {
    content: '';
    position: absolute;
    border-radius: 9999px;
    pointer-events: none;
    z-index: 1;
  }

  .ep-btn-shell::before {
    inset: 0;
    padding: 1.44px;
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
  }

  .ep-btn-shell::after {
    inset: 1.44px;
    padding: 1.44px;
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
  }

  .ep-btn-shell--soft::before {
    background-image: linear-gradient(0deg, rgba(47, 145, 202, 0) 0%, rgba(47, 145, 202, 0.66) 49%, rgba(47, 145, 202, 0) 100%);
  }

  .ep-btn-shell--soft::after {
    background-image: linear-gradient(180deg, rgb(255, 255, 255) 0%, rgba(255, 255, 255, 0) 49%, rgba(255, 255, 255, 0.52) 100%);
  }

  .ep-btn-shell--dark::before {
    background-image: linear-gradient(0deg, rgba(0, 15, 31, 0) 0%, rgba(0, 15, 31, 0.66) 49%, rgba(0, 15, 31, 0) 100%);
  }

  .ep-btn-shell--dark::after {
    background-image: linear-gradient(180deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0) 49%, rgba(255, 255, 255, 0.15) 100%);
  }

  .ep-btn {
