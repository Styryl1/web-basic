      border-color 0.15s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ep-header__menu-btn span {
    position: absolute;
    width: 24px;
    height: 3px;
    border-radius: 9999px;
    background-color: rgb(203, 242, 255);
    transition: transform 220ms ease, opacity 180ms ease, background-color 180ms ease;
    transform-origin: center;
  }

  .ep-header__menu-btn span:nth-child(1) {
    transform: translateY(-6px);
  }

  .ep-header__menu-btn span:nth-child(3) {
    transform: translateY(6px);
  }

  .ep-header.is-scrolled .ep-header__menu-btn span {
    background-color: rgb(17, 57, 101);
  }

  .ep-header.is-menu-open .ep-header__menu-btn span:nth-child(1) {
    transform: translateY(0) rotate(45deg);
  }

  .ep-header.is-menu-open .ep-header__menu-btn span:nth-child(2) {
    opacity: 0;
  }

  .ep-header.is-menu-open .ep-header__menu-btn span:nth-child(3) {
    transform: translateY(0) rotate(-45deg);
  }

